// Create a variable to hold your NFTs
let nfts = [];

// This function will take in some values as parameters, create an
// NFT object using the parameters passed to it for its metadata, 
// and store it in the variable above.
function mintNFT(name, artist, year, description) {
    // Create the NFT object with the provided metadata
    const nft = {
        name: name,
        artist: artist,
        year: year,
        description: description
    };

    // Store the created NFT object in the array
    nfts.push(nft);
}

// Create a "loop" that will go through an "array" of NFTs
// and print their metadata with console.log()
function listNFTs() {
    for (let i = 0; i < nfts.length; i++) {
        console.log("Name: " + nfts[i].name);
        console.log("Artist: " + nfts[i].artist);
        console.log("Year: " + nfts[i].year);
        console.log("Description: " + nfts[i].description);
        console.log("---------------");
    }
}

// Print the total number of NFTs we have minted to the console
function getTotalSupply() {
    return nfts.length;
}

// Call your functions below this line

// Mint a few NFTs
mintNFT("NFT1", "Artist1", 2023, "This is the first NFT");
mintNFT("NFT2", "Artist2", 2024, "This is the second NFT");
mintNFT("NFT3", "Artist3", 2025, "This is the third NFT");

// List all NFTs
listNFTs();

// Print the total supply of NFTs
console.log("Total Supply: " + getTotalSupply());
